# Database
DATABASE_URL=postgres://pharos_user:1920@localhost/ztarknet_monitor

# Ztarknet Blockchain (Madara Node)
ZTARKNET_RPC=http://localhost:9944
ZTARKNET_WS=ws://localhost:9944

# Or if you have a remote Madara node:
# ZTARKNET_RPC=https://your-madara-node.com
# ZTARKNET_WS=wss://your-madara-node.com

# Chain Info
CHAIN_ID=SN_ZTARKNET
CHAIN_NAME="Ztarknet Testnet"

# Server
HOST=0.0.0.0
PORT=3000

# Alert Configuration
ALERT_LARGE_TX_THRESHOLD=5000.0
ALERT_FAILED_TX_ENABLED=true
ALERT_ANOMALY_DETECTION=true

# Email Configuration
ALERT_EMAIL_ENABLED=false
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
ALERT_EMAIL_RECIPIENTS=admin@example.com

# Telegram Configuration
ALERT_TELEGRAM_ENABLED=false
TELOXIDE_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_chat_id

# Logging
RUST_LOG=info,ztarknet_monitor=debug