# Database Configuration
DATABASE_URL=postgres://pharos_user:1920@localhost/pharos_monitor

# Pharos Blockchain (Replace YOUR_ACCESS_KEY with your ZAN.top key)
PHAROS_HTTPS_RPC=https://api.zan.top/node/v1/pharos/testnet/01b29a11dbb7467c8a122c6c569a5620
PHAROS_WSS_RPC=wss://api.zan.top/node/ws/v1/pharos/testnet/01b29a11dbb7467c8a122c6c569a5620

# Server Configuration
HOST=0.0.0.0
PORT=3000

# Alert Configuration
ALERT_LARGE_TX_THRESHOLD=5000.0
ALERT_FAILED_TX_ENABLED=true
ALERT_ANOMALY_DETECTION=true

# Email Configuration (Optional - set to false if not using)
ALERT_EMAIL_ENABLED=false
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
ALERT_EMAIL_RECIPIENTS=admin@example.com

# Telegram Configuration (Optional - set to false if not using)
ALERT_TELEGRAM_ENABLED=false
TELOXIDE_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_chat_id

# Logging
RUST_LOG=info,pharos_monitor=debug